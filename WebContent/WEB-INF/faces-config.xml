<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    <application >
          <resource-handler>org.omnifaces.resourcehandler.CombinedResourceHandler</resource-handler>
	    <resource-bundle >
			<base-name>StringText</base-name>
			<var>stringText</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>StringError</base-name>
			<var>stringError</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>StringButton</base-name>
			<var>stringButton</var>
		</resource-bundle>
	</application>
	
    <navigation-rule>
    	<display-name>index</display-name>
    	<from-view-id>/jsf/index.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userManager.login}</from-action>
    		<from-outcome>success</from-outcome>
    		<to-view-id>/jsf/home/home.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
        <from-action>#{userManager.login}</from-action>
        <from-outcome>faillure</from-outcome>
        <to-view-id>/jsf/index.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>home</display-name>
    	<from-view-id>/jsf/home/home.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userManager.logout}</from-action>
    		<from-outcome>success</from-outcome>
    		<to-view-id>/jsf/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    </navigation-rule>
   	
    
</faces-config>
