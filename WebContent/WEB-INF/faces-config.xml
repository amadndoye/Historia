<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    <application >
	    <resource-bundle >
			<base-name>StringText</base-name>
			<var>stringText</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>StringError</base-name>
			<var>stringError</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>StringButton</base-name>
			<var>stringButton</var>
		</resource-bundle>
	</application>
	

	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/jsf/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login-success</from-outcome>
			<to-view-id>/jsf/home/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registration-form</from-outcome>
			<to-view-id>/jsf/user/registration.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>*</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/jsf/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	
</faces-config>
